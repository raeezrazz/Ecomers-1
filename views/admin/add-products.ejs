        <script>
         function validateForm(event) {
    event.preventDefault(); // Prevent default form submission

    let name = $("#product_title").val().trim();
    let quantity = $("#quantity").val().trim();
    let price = $("#price").val().trim();
    let description = $("#description").val().trim();
    const images = $("#images").val()
    console.log(images,"here is images")

    // Reset error messages
    $(".text-danger").text("");
            let success= true
    // Check for empty fields
    if (name === "") {
        $("#pnameError").text("Product Name is required");
        success= false
    } 
     if (quantity === "") {
        $("#quantityError").text("Quantity is required");
        success= false
    } 
    if (price === "") {
        $("#priceError").text("Price is required");
        success= false
    } 
     if (description === "") {
        $("#descriptionError").text("Description is required");
        success= false
    }  
        // Check for leading spaces
        if (/^\s/.test(name)) {
            $("#pnameError").text("Leading spaces are not allowed");
            success= false
        } else if (/^\s/.test(quantity)) {
            $("#quantityError").text("Leading spaces are not allowed");
            success= false
        } else if (/^\s/.test(price)) {
            $("#priceError").text("Leading spaces are not allowed");
            success= false
        } else if (/^\s/.test(description)) {
            $("#descriptionError").text("Leading spaces are not allowed");
            success= false
        } 
        if(success ===true){
            $("#addForm").submit();
        }
    }


        </script>   
 
   
<script>
    function previewImages(event) {
        const fileInput = event.target;
        const files = fileInput.files;
        const previewDiv = document.getElementById("imagePreviews");

        previewDiv.innerHTML = ""; // Clear previous previews

        for (let i = 0; i < Math.min(files.length, 3); i++) {
            const file = files[i];
            const reader = new FileReader();

            reader.onload = function(e) {
                const img = document.createElement("img");
                img.src = e.target.result;
                console.log(img,"jhgfnnnnnnnnnnnnnnnnnnnnn")

                // Create an image container for the original image
                const originalContainer = document.createElement("div");
                originalContainer.classList.add("original-image-container");
                originalContainer.appendChild(img);

                // Append the original image container to the previews div
                previewDiv.appendChild(originalContainer);

                // Initialize Cropper on the original image container
                const cropper = new Cropper(img, {
    aspectRatio: 1, // You can adjust the aspect ratio as needed
    viewMode: 1,
    dragMode: 'move',
    autoCropArea: 1,
    crop: function(event) {
    const canvas = cropper.getCroppedCanvas(); // Get the cropped canvas
    const croppedImage = canvas.toDataURL(); // Convert canvas to base64 data URL
console.log(croppedImage,"kkkkkkkkkkkkkkkkkkk")
    // Send cropped image data to the backend
    const formData = new FormData();
    formData.append('croppedImage', croppedImage);

    // You can append additional data if needed, e.g., product ID
    // formData.append('productId', productId);

    
}
    
                });

                // Input field for changing image
                const changeInput = document.createElement("input");
                changeInput.type = "file";
                changeInput.accept = "image/*";
                changeInput.addEventListener("change", function(event) {
                    const newFile = event.target.files[0];
                    if (newFile) {
                        const newReader = new FileReader();
                        newReader.onload = function(e) {
                            cropper.replace(e.target.result); // Replace image in cropper
                        };
                        newReader.readAsDataURL(newFile);
                    }
                });

                // Remove button
                const removeBtn = document.createElement("button");
                removeBtn.textContent = "Remove";
                removeBtn.addEventListener("click", function() {
                    previewDiv.removeChild(originalContainer); // Remove the original container
                    fileInput.value = null; // Clear the selected file
                });

                // Append elements to the original container
                originalContainer.appendChild(changeInput);
                originalContainer.appendChild(removeBtn);
            };

            reader.readAsDataURL(file);
            console.log(reader)
        }
    }
</script>

    
