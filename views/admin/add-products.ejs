     <script>    
        let filesValid;
       let cropedImages = [];
       
       document.querySelector('#choosen-file').addEventListener("change", handleFileChange);
       
       async function handleFileChange(e) {
           if (supportsFileAPI()) {
               cropedImages = [];
               const files = e.target.files;
               const output = document.querySelector('#result');
       
               if (files.length !== 4) {
                   displayErrorMessage('Please select 4 images.');
                   return;
               } else {
                   hideErrorMessage();
               }
       
               for (let i = 0; i < files.length; i++) {
                   if (!files[i].type.match('image')) continue;
                   
                   const picReader = new FileReader();
                   picReader.addEventListener('load', function (event) {
                       const picFile = event.target;
                       const div = createImageContainer(picFile.result);
                       output.appendChild(div);
                       const cropper = createImageCropper(div.querySelector('img'));
                       cropedImages.push(cropper);
                   });
                   picReader.readAsDataURL(files[i]);
               }
           } else {
               alert('Your browser does not support the File API');
           }
       }
       
       function supportsFileAPI() {
           return window.File && window.FileReader && window.FileList && window.Blob;
       }
       
       function displayErrorMessage(message) {
           const fourimage = $('#fourimage');
           fourimage.text(message);
       }
       
       function hideErrorMessage() {
           $('#fourimage').css('display', 'none');
       }
       
       function createImageContainer(imageSrc) {
           const div = document.createElement("div");
           const img = document.createElement('img');
           img.src = imageSrc;
           div.appendChild(img);
           return div;
       }
       
       function createImageCropper(image) {
           return new Cropper(image, {
               veiwMode: 1,
               guides: true,
               autoCropArea: 1
           });
       }
       
       async function addFormSubmit(event) {
        console.log("1");
           event.preventDefault();
           console.log("2");
       
           const addForm = document.getElementById('addForm');
           const producterror = $("#pnameError");
           const descriptionerror = $("#descriptionError");
           const priceerror = $('#priceError');
           const quantityerror = $('#quantityError');
       
           const name = $('#product_title').val();
           const description = $('#description').val();
           const price = Number($('#price').val());
           const quantity = Number($('#quantity').val());
       
           producterror.text('');
           descriptionerror.text('');
           priceerror.text('');
           quantityerror.text('');
       
           if (name.trim() === '' || /\d/.test(name)) {
               producterror.text("Enter a valid name");
           } else if (description.trim() === '') {
               descriptionerror.text("Enter a valid description");
           } else if (price < 0 || isNaN(price) || price === '') {
               priceerror.text("Enter a valid price");
           } else if (quantity < 0 || isNaN(quantity) || quantity === '') {
               quantityerror.text("Enter a valid quantity");
           } else {
               const formData = new FormData(addForm);
       
               console.log(formData,"1")
               cropedImages.forEach((cropper, index) => {
                   const croppedDataUrl = cropper.getCroppedCanvas().toDataURL('image/png');
                   const blob = dataURItoBlob(croppedDataUrl);
       
                   formData.append('cropedImages', blob, `cropped_image_${index}${Math.random()}.png`);
               });
               console.log(formData,"2")
       
       
               try {
                   const response = await $.ajax({
                       url: '/admin/addproduct',
                       type: 'POST',
                       data: formData,
                       processData: false,
                       contentType: false,
                       success: function (response) {
                           window.location.href = "/admin/product";
                       },
                       error: function (error) {
                           console.log("error", error);
                       }
                   });
               } catch (error) {
                   console.error("An error occurred during form submission:", error);
               }
           }
       }
       
       function dataURItoBlob(dataURI) {
           const byteString = atob(dataURI.split(',')[1]);
           const mimeString = dataURI.split(',')[0].split(':')[1].split(';')[0];
           const ab = new ArrayBuffer(byteString.length);
           const ia = new Uint8Array(ab);
           for (let i = 0; i < byteString.length; i++) {
               ia[i] = byteString.charCodeAt(i);
           }
           return new Blob([ab], { type: mimeString });
       }
