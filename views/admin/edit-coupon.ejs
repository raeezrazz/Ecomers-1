<script>
    function validateForm() {
        const nameInput = document.getElementById('coupName');
        const codeInput = document.getElementById('coupCode');
        const discountInput = document.getElementById('discAmount');
        const criteriaInput = document.getElementById('criteria');
        const startDateInput = document.getElementById('startDate');
        const expiryDateInput = document.getElementById('expiryDate');
        const couponId = document.getElementById('couponId').value;


        // Reset previous error messages
        document.getElementById('nameError').textContent = '';
        document.getElementById('codeError').textContent = '';
        document.getElementById('discountError').textContent = '';
        document.getElementById('criteriaError').textContent = '';
        document.getElementById('startDateError').textContent = '';
        document.getElementById('expiryDateError').textContent = '';

        let isValid = true;

        if (!nameInput.value ||(nameInput.value).trim() ==="" ) {
            document.getElementById('nameError').textContent = 'Coupon Name is required';
            isValid = false;
        }

        if (!codeInput.value  || (codeInput.value).trim() ==="") {
            document.getElementById('codeError').textContent = 'Coupon Code is required';
            isValid = false;
        }

        if (!discountInput.value) {
            document.getElementById('discountError').textContent = 'Discount Percentage is required';
            isValid = false;
        }

        if (!criteriaInput.value) {
            document.getElementById('criteriaError').textContent = 'Criteria Amount is required';
            isValid = false;
        }

        if (!startDateInput.value) {
            document.getElementById('startDateError').textContent = 'Starting Date is required';
            isValid = false;
        }

        if (!expiryDateInput.value) {
            document.getElementById('expiryDateError').textContent = 'Expiry Date is required';
            isValid = false;
        }
        if (discountInput.value <= 0 ||discountInput.value >99) {
            document.getElementById('discountError').textContent = 'Give Discount amount between 1 to 99';
            isValid = false;
        }
        if (criteriaInput.value < 1000) {
            document.getElementById('criteriaError').textContent = 'Criteria Amount must be above 1000';
            isValid = false;
        }
        if (expiryDateInput.value <= startDateInput.value ) {
            document.getElementById('expiryDateError').textContent = 'Expiry Date must be above start Date';
            isValid = false;
        }

        if (!isValid) {
            return; // Exit function if validation fails
        }
