                                </div>
                                <br>
                                <!-- Starting and Expiry Date Fields -->
                                <div class="row">
                                    <div class="col">
                                        <label for="startingDate" class="text">Starting Date</label>
                                        <input class="form-control" type="date" value="<%= coupon.activationDate ? new Date(coupon.activationDate).toISOString().split('T')[0] : '' %>" name="start" id="startDate" required>
                                        <div id="startDateError" class="text-danger"></div> <!-- Error Message -->
                                    </div>
                                    <div class="col">
                                        <label for="expiryDate" class="text">Expiry Date</label>
