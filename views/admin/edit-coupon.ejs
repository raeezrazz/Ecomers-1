                                        <div id="discountError" class="text-danger"></div> <!-- Error Message -->
                                    </div>
                                    <div class="col">
                                        <label for="criteriaAmount" class="text">Criteria Amount</label>
                                        <input class="form-control" type="number" value="<%=coupon.criteriaAmount%>" name="criteria" id="criteria" placeholder="Enter the Criteria Amount" required>
