        }
        async function offerSelect(val) {
            console.log(val, productId)
            const response = await fetch('/admin/applyOffer', {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ val, productId })
            }).then(response => response.json())
                .then(response => {
                    if (response.applied === true) {
                        Swal.fire({
                            position: "center",
                            icon: "success",
                            title: "Offer Applied Successfull",
                            showConfirmButton: false,
                            timer: 2000
                        }).then(() => {
                            location.reload()
                        })
                    } else {
                        Swal.fire({
                            position: "center",
                            icon: "warning",
                            title: "Something went Wrong",
                            showConfirmButton: false,
                            timer: 1500
                        });
                        console.log("else Running")
                    }
                })
        }
