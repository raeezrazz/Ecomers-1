                                                                <center>Update</center>
                                                            </th>
                                                            <th scope="col">
                                                                <center>List / Unlist</center>
                                                            </th>
                                                            <th scope="col">
                                                                <center>Action</center>
                                                            </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% for (let i=0; i < products.length; i++) { %>
                                                            <tr>
                                                                <td align="center">
                                                                    <%= i + 1 %>
                                                                </td>
                                                                <td align="center">
                                                                    <img width="90px" class="rounded-3 "
                                                                        src="/multerImage/<%=products[i].images[0] %>"
                                                                        style="max-width: 50px; max-height: 50px;"
                                                                        alt="">
                                                                </td>
                                                                <td align="center">
                                                                    <%= products[i].name %>
                                                                </td>
                                                                <td align="center">
                                                                    <%= products[i].quantity %>
                                                                </td>
                                                                <td align="center">
                                                                    <%= products[i].categoryId.name %>
                                                                    <%if(products[i].categoryId.offer ){%>
                                                                        <br>
                                                                        <h7 class="text-success font-xs" style="font-weight:900 ;"><%=products[i].categoryId.offer.name%></h7>
                                                                    <%}%>
                                                                </td>
                                                                <td align="center">
                                                                    ₹<%= products[i].price %>
                                                                </td>
                                                                <%if(products[i].offer ){%>
                                                                    <% if(products[i].offer.expiryDate >= new Date()){ %>
                                                                    <td class="text-success font-xs"
                                                                        style="font-weight:900 ;">
                                                                        <%=products[i].offer.name%>
                                                                    </td>
                                                                <%}else{%>
                                                                    <td class="text-success font-xs"
                                                                    style="font-weight:900 ;">
                                                                    <%=products[i].offer.name%>[<h7 class="text-danger">Expired</h7>]
                                                                </td>
                                                                <%}%>
                                                                    <%}else{%>
                                                                        <td class="text-danger">
                                                                            No Offer Selected
                                                                        </td>
                                                                        <%}%>
                                                                            <%if(products[i].offer ){%>
                                                                                <td align="center">
                                                                                    <button
                                                                                        class="badge badge-primary btn-danger rounded-pill border-0"
                                                                                        onclick="removeOffer('<%=products[i]._id%>')"><a>Remove</a></button>
                                                                                </td>
                                                                                <%}else{%>
                                                                                    <td align="center">
                                                                                        <button
                                                                                            class="badge btn-primary border-0"
                                                                                            style="background-color:#3BB77E ; height: 30px;"
                                                                                            onclick="chooseOffer('<%=products[i]._id%>')"><a>Choose</a></button>
                                                                                    </td>
                                                                                    <%}%>
                                                                                        <td align="center">

                                                                                            <a
                                                                                                href="/admin/editproduct?id=<%= products[i]._id%>">edit</a>
                                                                                        </td>
                                                                                        <td align="center">
                                                                                            <% if
                                                                                                (products[i].is_blocked)
                                                                                                { %>
                                                                                                <a class="unblock-user"
                                                                                                    data-user-id="<%= products[i]._id %>"><span
                                                                                                        class="badge rounded-pill alert-success">unblock</span></a>
                                                                                                <% } else { %>
                                                                                                    <a class="block-user"
                                                                                                        data-user-id="<%= products[i]._id %>"><span
                                                                                                            class="badge rounded-pill alert-warning">block</span></a>
                                                                                                    <% } %>
                                                                                        </td>
                                                                                        <td style="font-weight: bold;">

                                                                                            <button
                                                                                                style="border: none;"
                                                                                                onclick="removeProduct('<%=products[i]._id%>')"
                                                                                                type="submit"><span
                                                                                                    class="text-danger">X</span></button>

                                                                                        </td>
                                                            </tr>

                                                            <% } %>
                                                    </tbody>
                                                </table>

                                            </div>
                                            <% } else { %>
                                                <p>No products found in the database.</p>
                                                <% } %>

                                    </div>
                                </div>
                    </div>


                    <tbody>

                        </thead>
                    <tbody>
                    </tbody>
                    </table>
                    <!-- table-responsive.// -->

