    <script>
        function removeOffer(val) {
            const productId = val
            console.log(productId)
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then(async (result) => {
                if (result.isConfirmed) {
                    console.log("is confirm")

                    const response = await fetch('/admin/removeOffer', {
                        method: 'PATCH',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productId })

                    }).then(response => response.json())
                        .then(data => {
                            if (data.remove === true) {
                                Swal.fire({
                                    title: "Deleted!",
                                    text: "Your file has been deleted.",
                                    icon: "success",
                                    timer: 3000
                                })
                                    .then(() => {
                                        location.reload()
                                    })
                            }



                        })



                }
            });
        }
    </script>



    <script>
        function removeProduct(val) {
            const id = val
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then(async (result) => {
                if (result.isConfirmed) {
                    console.log("is confirm")

                    const response = await fetch('/admin/removeProduct', {
                        method: 'PATCH',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ id })

                    }).then(response => response.json())
                        .then(data => {
                            if (data.remove === true) {
                                Swal.fire({
                                    title: "Deleted!",
                                    text: "Your file has been deleted.",
                                    icon: "success",
                                    timer: 3000
                                })
                                    .then(() => {
                                        location.reload()
                                    })
                            }



                        })



                }
            });
        }
