<script>
    function updateQuantity(productId, count) {
        console.log("hi");
        const data = { productId, count };
        console.log(data, productId, count);
        $.ajax({
            url: '/updateQuantity',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: (response) => {
                if (response.success) {
                    console.log("order adding");
                    const newQuantity = response.quantity;
                    const remainingStock = response.remainingStock;
                    const subtotal = response.subtotal; 
                    const total = response.total;
                $(`#tot`).text(`₹ ${total}`); 

                $('#kif').text(`₹ ${subtotal}`); 
                $('#kif2').text(`₹ ${subtotal}`);

                    $(`#quantity-${productId}`).val(newQuantity); 
                  
                    if (remainingStock !== undefined && remainingStock - newQuantity < 3) {
                $(`#quantity-text-${productId}`).text('Only few Stock left...!'); 
                $(`#quantity-text-${productId}`).addClass('text-danger'); 
            }else{
                $(`#quantity-text-${productId}`).text(' '); 
                $(`#quantity-text-${productId}`).addClass('text-danger'); 
            }
                } else {
                    swal.fire({
                        icon: "info",
                        title: "Ooops..",
                        text: response.message
                    });
                }
            },
            error: (error) => {
                console.error('Error updating cart:', error);
            }
        });
    }
</script>

    
    
    <script>
        function removeProduct(val) {
            const id = val
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then(async (result) => {
                if (result.isConfirmed) {
                    console.log("is confirm")

                    const response = await fetch('/cartRemove', {
                        method: 'PATCH',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ id })

                    }).then(response => response.json())
                        .then(data => {
                            if (data.remove === true) {
                                Swal.fire({
                                    title: "Deleted!",
                                    text: "Your file has been deleted.",
                                    icon: "success",
                                    timer: 3000
                                })
                                    .then(() => {
                                        location.reload()
                                    })
                            }



                        })



                }
            });
        }
    </script>

